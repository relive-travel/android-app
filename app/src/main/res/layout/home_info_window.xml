<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="250"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center">

            <TextView
                android:id="@+id/home_info_window_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/main_margin"
                android:gravity="bottom"
                android:text="@string/ex_calendar_title"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/home_info_window_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/sub_margin"
                android:gravity="bottom"
                android:text="@string/ex_calendar_order"
                android:textSize="@dimen/basic_size"
                android:textStyle="bold"
                android:textColor="@color/highlight_color"
                />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/home_info_window_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/main_margin"
            android:gravity="bottom"
            android:text="@string/ex_calendar_date"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/home_info_window_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="120"
        android:scaleType="centerCrop"
        android:src="@drawable/mypage"
        android:contentDescription="@string/description_example_calendar_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:layout_margin="@dimen/main_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_info_window_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:text="@string/ex_calendar_place"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/home_info_window_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:text="@string/ex_calendar_address"
            android:textSize="@dimen/basic_size"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/home_info_window_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_calendar_review"
            android:textSize="@dimen/basic_size"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>